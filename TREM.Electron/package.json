{
  "name": "trem",
  "version": "6.0.160",
  "description": "Taiwan Real-time Earthquake Monitoring ( 臺灣即時地震監測 )",
  "main": "main.js",
  "homepage": "https://exptech.com.tw/",
  "author": "ExpTechTW <ExpTech.tw@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev --key",
    "dist": "electron-builder -p always",
    "lint": "eslint --ext .js js/"
  },
  "build": {
    "productName": "TREM",
    "appId": "tw.exptech.trem",
    "asar": true,
    "asarUnpack": [
      "./audio",
      "./package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "TREM.ico"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ],
      "category": "Development",
      "maintainer": "ExpTechTW"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dev"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yayacat/TREM.git"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^24.1.3",
    "electron-builder": "^24.0.0",
    "eslint": "^8.39.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@material/material-color-utilities": "^0.2.0",
    "@turf/circle": "^6.5.0",
    "axios": "^1.0.0",
    "bytenode": "^1.4.1",
    "chokidar": "^3.5.3",
    "discord.js": "14.8.0",
    "echarts": "^5.4.1",
    "electron-common-ipc": "16.0.1-dev.8",
    "electron-fcm-push-receiver": "^2.1.7",
    "electron-log": "5.0.0-beta.16",
    "electron-updater": "^5.3.0",
    "expose-gc": "^1.0.0",
    "jquery": "3.6.4",
    "leaflet": "^1.9.3",
    "leaflet-edgebuffer": "^1.0.6",
    "leaflet-geojson-vt": "^1.1.0",
    "maplibre-gl": "^2.4.0",
    "node-fetch": "^2.6.7",
    "speak-tts": "^2.0.8",
    "tinycolor2": "1.6.0",
    "ws": "8.13.0"
  }
}

{
  "name": "trem",
  "version": "4.0.0-pre.15",
  "description": "台灣即時地震監測",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder",
    "lint": "eslint --ext .js js/"
  },
  "build": {
    "productName": "TREM",
    "appId": "ExpTech.tw",
    "asar": false,
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [],
      "icon": "TREM.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dev"
    }
  },
  "repository": "https://github.com/ExpTechTW/TREM",
  "keywords": [],
  "author": "whes1015",
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "eslint": "^8.19.0",
    "eslint-plugin-require-sort": "^1.2.2"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@material/material-color-utilities": "^0.1.2",
    "bytenode": "^1.3.6",
    "discord.js": "^13.8.1",
    "electron-common-ipc": "^15.0.3",
    "electron-fcm-push-receiver": "^2.1.7",
    "fs": "^0.0.1-security",
    "jquery": "^3.6.0",
    "lodash": "^4.17.21",
    "ws": "^8.8.0"
  }
}

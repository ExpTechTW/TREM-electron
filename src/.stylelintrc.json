{
  "extends": ["stylelint-config-standard"],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order": [
      "all",
      "flex",
      "display",
      "flex-basis",
      "flex-grow",
      "align-items",
      "justtify-contents",
      "grid-template-column",
      "grid-template-row",
      "flex-direction",
      "gap",
      "position",
      "top",
      "left",
      "bottom",
      "right",
			"height",
			"width",
			"aspect-ratio",
			"margin",
			"padding",
      "border",
      "border-radius",
      "opacity",
			"color",
			"background-color",
      "outline",
			"font-family",
			"font-weight",
			"font-size",
			"font-variant-numeric",
			"white-space",
			"overflow",
			"overflow-x",
			"overflow-y",
			"cursor",
			"pointer-event",
			"isolation",
			"z-index",
			"transition"
		]
	}
}
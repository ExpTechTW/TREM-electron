{
  "name": "trem",
  "version": "1.1.0",
  "description": "台灣即時地震監測",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "TREM",
    "appId": "ExpTech.tw",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "TREM.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "repository": "https://github.com/ExpTechTW/TREM",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "whes1015",
  "license": "AGPL-3.0",
  "devDependencies": {
    "electron": "^18.2.3"
  },
  "dependencies": {
    "electron-builder-squirrel-windows": "^23.0.9"
  }
}